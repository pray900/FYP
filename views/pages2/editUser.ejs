<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/addUser.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/header')%>  
    <div class="container">
		<div class="nav_bar">
			<span class="icon" id="icon">
				<i class="fas fa-bars" id="menu"></i>
				<i class="fas fa-bars close" id="cancel"></i>
            </span>
            <span>
                <p style="color:white;margin-left: 80vw;">Edit USER</p>
            </span>
		</div>
		<div class="contents">
			<div class="menu_items slide" id="left">
				<div class="lists" onclick="window.location='/home'"><span>Home</span></div>
				<div class="lists" onclick="window.location='/inventorysearch'"><span>Inventory</span></div>
				<div class="lists" onclick="window.location='/salesearch'"><span>Sales</span></div>
				<div class="lists" onclick="window.location='/customersearch'"><span>Customers</span></div>
				<div class="lists" onclick="window.location='/logs'"><span>Logs</span></div>
				<div class="lists" onclick="window.location='/register'"><span>Register</span></div>
			</div>
			<div class="main_body">
                <form action="" method="POST">
                    <label for="name">Name:</label><br>
                    <input type="text" id="name" name="name"><br>

                    <label id="email" for="email">Email:</label><br>
                    <input type="text" id="email" name="email"><br>

                    <label for="username">Username:</label><br>
                    <input type="text" id="username" name="username"><br>

                    <label id="pwd" for="password">Password:</label><br>
                    <input type="text" id="password" name="password"><br>

                    <label id="repwd" for="repassword">retype-Password:</label><br>
                    <input type="text" id="repassword" name="repassword"><br>

                    <label id="role" for="role">Role:</label><br>
                    <input type="radio" id="inventory" name="type" value="inventory">
                    <label for="inventory"> Inventory</label><br>
                    <input type="radio" id="sales" name="type" value="sales">
                    <label for="sales"> Sales</label><br>
                    <input type="radio" id="owner" name="type" value="owner">
                    <label for="owner"> Owner</label><br>
                    <input id="addbtn" type="submit" value="Edit User">
                </form>
			</div>
		</div>
    </div>
    

</body>
<script>
    document.querySelector("#icon").addEventListener("click",action);

function action(){
	document.querySelector("#menu").classList.toggle('close');
	document.querySelector("#cancel").classList.toggle('close');
	document.querySelector("#left").classList.toggle('slide');
	document.querySelector("#left").classList.toggle('none');
}
</script>
</html>