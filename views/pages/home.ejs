<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>Owner Home</title>
</head>
<body>
    <%- include('../partials/header')%>  
    <div class="container">
		<div class="nav_bar">
			<span class="icon" id="icon">
				<i class="fas fa-bars" id="menu"></i>
				<i class="fas fa-bars close" id="cancel"></i>
            </span>
            <span>
                <p style="color:white;margin-left: 5vw;">WELCOME,USER (Owner)</p>
            </span>
            <button style="margin-left: 70vw;" onclick="window.location='/logout'">logout</button>
		</div>
		<div class="contents">
			<div class="menu_items slide" id="left">
				<div class="lists"><span>Home</span></div>
				<div class="lists"><span>Inventory</span></div>
				<div class="lists"><span>Sales</span></div>
				<div class="lists"><span>Customers</span></div>
				<div class="lists"><span>Logs</span></div>
				<div class="lists"><span>Register</span></div>
			</div>
			<div class="main_body">
                <div class="container1">
                    <label for="shop">Shop :</label>
                    <select name="shop" id="shop">
                        <option value="Shop_1">Shop 1</option>
                        <option value="Shop_2">Shop 2</option>
                    </select>
                </div>
                <div class="container2">
                    <div class="t_sales">
                        <p>Total Sales :</p>
                        <p>123</p>
                    </div>
                    <div class="t_profit">
                        <p>Total Profit :</p>
                        <p>123</p>
                    </div>
                    <div class="t_logs">
                        <p>Total Logs :</p>
                        <p>123</p>
                    </div>
                </div>
                <div class="container3">
                    <div class="t_customer">
                        <p>Total Customers :</p>
                        <p>123</p>
                    </div>
                    <div class="t_inventory">
                        <p>Total Inventory :</p>
                        <p>123</p>
                    </div>
                </div>
                <div class="container4">
                    <p>Low Inentory</p>
                    <p>Inventory1</p>
                </div>
			</div>
		</div>
    </div>
</body>
<script>
    document.querySelector("#icon").addEventListener("click",action);

function action(){
	document.querySelector("#menu").classList.toggle('close');
	document.querySelector("#cancel").classList.toggle('close');
	document.querySelector("#left").classList.toggle('slide');
	document.querySelector("#left").classList.toggle('none');
}
</script>
</html>