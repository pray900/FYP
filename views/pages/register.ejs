<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>register</title>
</head>
<body>
    <%- include('../partials/header')%>  
    <div class="container">
		<div class="nav_bar">
			<span class="icon" id="icon">
				<i class="fas fa-bars" id="menu"></i>
				<i class="fas fa-bars close" id="cancel"></i>
            </span>
            <span>
                <p style="color:white;margin-left: 5vw;">WELCOME,USER (Owner)  Register</p>
            </span>
            <button style="margin-left: 58vw;" onclick="window.location='/logout'">logout</button>
		</div>
		<div class="contents">
			<div class="menu_items slide" id="left">
				<div class="lists"><span>Home</span></div>
				<div class="lists"><span>Inventory</span></div>
				<div class="lists"><span>Sales</span></div>
				<div class="lists"><span>Customers</span></div>
				<div class="lists"><span>Logs</span></div>
				<div class="lists"><span>Register</span></div>
			</div>
			<div class="main_body">
                <div class="container1">
                    <div class="searchbox">
                        <div class="searchpart">
                            <div class="txtnbtn">
                                <input type="text">
                                <button>Search</button>
                                <button>Edit</button>
                                <button>Delete</button>
                            </div>
                            <div class="checkboxpart">
                                <input type="checkbox" name="byID" id="byID">
                                <p>By ID</p>
                                <input type="checkbox" name="byName" id="byName">
                                <p>By Name</p>
                                <input type="checkbox" name="byEmail" id="byEmail">
                                <p>By Email</p>
                                <input type="checkbox" name="byUsername" id="byUsername">
                                <p>By Username</p>
                                <input type="checkbox" name="byRole" id="byRole">
                                <p>By Role</p>
                            </div>
                        </div>
                        <hr>
                        <div class="sortpart">
                            <input type="checkbox" name="byID" id="byID2">
                                <p>By ID</p>
                                <input type="checkbox" name="byName" id="byName2">
                                <p>By Name</p>
                                <input type="checkbox" name="byEmail" id="byEmail2">
                                <p>By Email</p>
                                <input type="checkbox" name="byUsername" id="byUsername2">
                                <p>By Username</p>
                                <input type="checkbox" name="byRole" id="byRole2">
                                <p>By Role</p>
                            <button>Sort</button>
                        </div>
                    </div>
                    <div class="buttonbox">
                        <button>Add User</button>
                    </div>
                </div>
                <div class="container2">
                    <p>User List</p>
                </div>
			</div>
		</div>
    </div>
</body>
<script>
    document.querySelector("#icon").addEventListener("click",action);

function action(){
	document.querySelector("#menu").classList.toggle('close');
	document.querySelector("#cancel").classList.toggle('close');
	document.querySelector("#left").classList.toggle('slide');
	document.querySelector("#left").classList.toggle('none');
}
</script>
</html>