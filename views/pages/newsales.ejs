<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/newsales.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>new sales</title>
</head>
<body>
    <%- include('../partials/header')%>  
    <div class="container">
		<div class="nav_bar">
			<span class="icon" id="icon">
				<i class="fas fa-bars" id="menu"></i>
				<i class="fas fa-bars close" id="cancel"></i>
            </span>
            <span>
                <p style="color:white;margin-left: 5vw;">WELCOME,USER (Owner)  New Sales</p>
            </span>
            <button style="margin-left: 58vw;" onclick="window.location='/logout'">logout</button>
		</div>
		<div class="contents">
			<div class="menu_items slide" id="left">
				<div class="lists" onclick="window.location='/home'"><span>Home</span></div>
				<div class="lists" onclick="window.location='/inventorysearch'"><span>Inventory</span></div>
				<div class="lists" onclick="window.location='/salesearch'"><span>Sales</span></div>
				<div class="lists" onclick="window.location='/customersearch'"><span>Customers</span></div>
				<div class="lists" onclick="window.location='/logs'"><span>Logs</span></div>
				<div class="lists" onclick="window.location='/register'"><span>Register</span></div>
			</div>
			<div class="main_body">
                <form action="">
                    <div class="txtbox">
                        <label for="Name">Name: </label><br>
                        <input type="text" id="name" name="name"><br>
                        <label for="salestype">Sales Type : </label><br>
                        <input type="text" id="salestype" name="salestype"><br>
                        <label for="datesold">Date Sold: </label><br>
                        <input type="text" id="datesold" name="datesold"><br>
                        <label for="quantity">Quantity: </label><br>
                        <input type="text" id="quantity" name="quantity"><br>
                        <label for="salesprice">Sales price: </label><br>
                        <input type="text" id="salesprice" name="salesprice"><br>
                    </div>
                    <div class="btnbox">
                        <label for="customerid">Customer ID: </label><br>
                        <input type="text" id="customerid" name="customerid"><br>
                        <label for="profit">Profit: </label><br>
                        <input type="text" id="profit" name="profit"><br>
                        <label for="invid">Inv ID: </label><br>
                        <input type="text" id="invid" name="invid"><br>
                        <input type="submit" id="submitbtn" value ="Add Sales"><br>
                        <button id="newcustomer">New Customer</button><br>
                        <button id="srcinv">Search Inventory</button>
                    </div>
                </form>
                <div class="listbox">
                    <div class="invlist">
                        <p>inventory list</p>
                    </div>
                    <div class="custlist">
                        <p>customer list</p>
                    </div>
                </div>
			</div>
		</div>
    </div>
</body>
<script>
    document.querySelector("#icon").addEventListener("click",action);

function action(){
	document.querySelector("#menu").classList.toggle('close');
	document.querySelector("#cancel").classList.toggle('close');
	document.querySelector("#left").classList.toggle('slide');
	document.querySelector("#left").classList.toggle('none');
}
</script>
</html>